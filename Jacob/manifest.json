{
  "manifest_version": 2,
  "name": "Test Extension",
  "version": "0.1",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": ["images/*"],
  "page_action": {
    "default_title": "Test Extension",
    "default_popup": "popup.html"
  }
}
